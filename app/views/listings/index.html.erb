<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
    <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(listing.image.url), listing %>
        <div class="caption">
          <h1><%= listing.name %></h1>
          <p><strong>
            Price : <%= number_to_currency(listing.price) %>
          </strong></p>
          <p><%= "Sold By : #{listing.user.name}" %></p>
          </p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
